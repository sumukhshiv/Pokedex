<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juliazluo.www.pokedex.ProfileActivity">

    <ImageView
        android:layout_width="296dp"
        android:layout_height="291dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/profile_image"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        android:layout_marginEnd="16dp"
        android:background="#f4c1c1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <TextView
        android:text="  name"
        android:layout_width="295dp"
        android:layout_height="56dp"
        android:id="@+id/profile_name"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:textSize="32sp"
        android:layout_marginTop="16dp"
        android:background="#c1292e"
        android:textColor="#fdfffc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:paddingLeft="8sp"
        android:gravity="center_vertical|left"/>

    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_number"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@+id/profile_name"
        app:layout_constraintTop_toTopOf="@+id/profile_name"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="#fdfffc"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/profile_name"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_hp"
        android:gravity="left"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_attack"
        app:layout_constraintLeft_toLeftOf="@+id/profile_attack" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_dp"
        android:gravity="left"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_types"
        app:layout_constraintLeft_toLeftOf="@+id/profile_types" />

    <TextView
        android:text="Types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_types"
        app:layout_constraintTop_toBottomOf="@+id/profile_species"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/profile_species" />

    <TextView
        android:text="Species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_species"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_image"
        app:layout_constraintLeft_toLeftOf="@+id/profile_image" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_attack"
        android:gravity="left"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/profile_dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profile_dp" />

    <Button
        android:id="@+id/buttonSearchTheWeb"
        android:background="@drawable/ic_language_black_24dp"
        android:layout_height="51dp"
        android:textColor="#235789"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_width="51dp" />
</android.support.constraint.ConstraintLayout>
